generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      String   @default("ANALYST")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  companies Company[]
  cims      CIM[]
  reviews   Review[]

  @@map("users")
}

model Company {
  id          String   @id @default(uuid())
  name        String
  industry    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userId String
  user   User   @relation(fields: [userId], references: [id])
  cims   CIM[]

  @@map("companies")
}

model CIM {
  id          String    @id @default(uuid())
  title       String
  status      String    @default("DRAFT")
  templateId  String
  content     String    // Changed from Json for SQLite compatibility
  aiAnalysis  String?   // Changed from Json for SQLite compatibility
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  // Relations
  companyId String
  company   Company @relation(fields: [companyId], references: [id])
  userId    String
  user      User    @relation(fields: [userId], references: [id])
  reviews   Review[]

  @@map("cims")
}

model Review {
  id        String       @id @default(uuid())
  status    String       @default("PENDING")
  comments  String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relations
  cimId      String
  cim        CIM    @relation(fields: [cimId], references: [id])
  reviewerId String
  reviewer   User   @relation(fields: [reviewerId], references: [id])

  @@map("reviews")
}